<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/permissionFragment">

    <fragment
        android:id="@+id/permissionFragment"
        android:name="com.example.autosilent.ui.permission.PermissionFragment"
        android:label="fragment_permission"
        tools:layout="@layout/fragment_permission" >
        <action
            android:id="@+id/action_permissionFragment_to_showPlacesFragment"
            app:destination="@id/showPlacesFragment"
            app:popUpTo="@id/permissionFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/showPlacesFragment"
        android:name="com.example.autosilent.ui.show_places.ShowPlacesFragment"
        android:label="fragment_show_places"
        tools:layout="@layout/fragment_show_places" >
        <action
            android:id="@+id/action_showPlacesFragment_to_addPlacesFragment"
            app:destination="@id/addPlacesFragment" />
        <action
            android:id="@+id/action_showPlacesFragment_to_mapsFragment"
            app:destination="@id/mapsFragment" />
    </fragment>
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.example.autosilent.ui.maps.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps" >
        <action
            android:id="@+id/action_mapsFragment_to_showPlacesFragment"
            app:destination="@id/showPlacesFragment"
            app:popUpTo="@id/mapsFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="geofenceEntity"
            app:argType="com.example.autosilent.data.GeofenceEntity"
            app:nullable="true"
            android:defaultValue="@null"/>
    </fragment>
    <fragment
        android:id="@+id/addPlacesFragment"
        android:name="com.example.autosilent.ui.add_places.AddPlacesFragment"
        android:label="fragment_add_places"
        tools:layout="@layout/fragment_add_places" >
        <action
            android:id="@+id/action_addPlacesFragment_to_mapsFragment"
            app:destination="@id/mapsFragment" />
    </fragment>
    <action
        android:id="@+id/action_global_showPlacesFragment"
        app:destination="@id/showPlacesFragment"
        app:popUpToInclusive="true"
        app:launchSingleTop="true" />
</navigation>